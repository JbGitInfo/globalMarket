{
    "name": "globalmarket",
    "version": "1.0.0",
    "description": "Tibia global Market",
    "main": "dist/server.js",
    "scripts": {
        "test": "jest",
        "start:dev": "ts-node-dev ./src/server.ts",
        "start": "node dist/server.js",
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "format:staged": "pretty-quick --staged",
        "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
        "m:run": "npm run typeorm migration:run",
        "m:generate": "npm run typeorm migration:generate -- -n",
        "clean-database": "npm run typeorm schema:drop && npm run typeorm migration:run"
    },
    "author": "Joao Brasil",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "pg": "^8.6.0",
        "server": "^1.0.33",
        "tsyringe": "^4.5.0",
        "typeorm": "^0.2.34"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.5",
        "@babel/preset-typescript": "^7.14.5",
        "@types/express": "^4.17.12",
        "@types/jest": "^26.0.23",
        "@types/node": "^15.12.4",
        "@types/sinon": "^10.0.2",
        "@types/supertest": "^2.0.11",
        "babel-jest": "^27.0.2",
        "jest": "^27.0.4",
        "pre-commit": "^1.2.2",
        "pre-push": "^0.1.1",
        "prettier": "^2.3.1",
        "pretty-quick": "^3.1.1",
        "reflect-metadata": "^0.1.13",
        "sinon": "^11.1.1",
        "supertest": "^6.1.3",
        "ts-jest": "^27.0.3",
        "ts-loader": "^9.2.3",
        "ts-node": "^10.0.0",
        "ts-node-dev": "^1.1.6",
        "typescript": "^4.3.3"
    },
    "pre-commit": "format:staged",
    "pre-push": {
        "silent": true,
        "run": [
            "test",
            "build"
        ]
    }
}
